@model EntityLayer.Entities.Article
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                <div class="form-group">
                    <label>>Başlık</label>
                    <input type="text" class="form-control" name="Title" />
                    @Html.ValidationMessageFor(x => x.Title, "", new { style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>>Makale</label>
                    <input type="text" class="form-control" name="Content" />
                    @Html.ValidationMessageFor(x => x.Content, "", new { style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>>Resim</label>
                    <input type="file" class="form-control-file" name="Dosya" />
                    @Html.ValidationMessageFor(x => x.Dosya, "", new { style = "color:red" })
                </div>
                <br />
                <div class="form-group">
                    <label>>Oluşturlma Tarihi</label>
                    <input type="datetime" class="form-control" name="CreateDate" />
                    @Html.ValidationMessageFor(x => x.CreateDate, "", new { style = "color:red" })
                </div>
                <br />

                <div class="form-group">
                    <label>>Aktif mi</label>
                    @Html.EditorFor(x => x.IsActive)
                    @Html.ValidationMessageFor(x => x.IsActive, "", new { style = "color:red" })
                </div>

                <br />
                <div class="form-group">
                    <label>>Kategori</label>
                    <input type="text" class="form-control" name="CategoryId" />
                    @*@Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>)ViewBag.ktgr, new { @class ="form-control"})*@
                    @Html.ValidationMessageFor(x => x.CategoryId, "", new { style = "color:red" })
                </div>
                <br />
                <button class="btn btn-primary" type="submit">Ekle</button>
                <a href="/Admin/AdminCategory/Index" class="btn btn-primary">Ürün Listesi</a>
            </form>
        </div>
    </div>
</div>




