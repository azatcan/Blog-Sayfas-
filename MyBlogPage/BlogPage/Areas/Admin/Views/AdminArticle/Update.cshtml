@model EntityLayer.Entities.Article
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()


                <div class="form-group">
                    <label>>Başlık</label>
                    <input type="text" class="form-control" name="Title" value="@Model.Title" />

                </div>
                <br />
                <div class="form-group">
                    <label>>Makale</label>
                    <input type="text" class="form-control" name="Content" value="@Model.Content" />

                </div>
                <br />
                <div class="form-group">
                    <label>>Önceki Resim</label>
                    <img src="~/İmage/@Model.ImagePath" width="80" height="80" />

                </div>
                <br />

                <div class="form-group">
                    <label>>Resim</label>
                    <input type="file" class="form-control" name="Dosya" />

                </div>
                <br />
                <div class="form-group">
                    <label>>Oluşturulma Tarihi</label>
                    <input type="text" class="form-control" name="CreateDate" value="@Model.CreateDate" />

                </div>
                <br />
                @*    <div class="form-group">
                <label>>Güncellenme Tarihi</label>
                <input type="text" class="form-control" name="UpdateDate" value="@Model.UpdateDate" />

                </div>*@
                <br />
                <div class="form-group">
                    <label>>Aktif mi</label>
                    @Html.EditorFor(x => x.IsActive)

                </div>
                <br />
                @*  <div class="form-group">
                <label>>Onay</label>
                @Html.EditorFor(x => x.IsApproved)

                </div>*@
                <br />
                @*  <div class="form-group">
                <label>>Yazar Id</label>
                <input type="text" class="form-control" name="AuthorId" value="@Model.AuthorId" />

                </div>*@
                <br />

                <div class="form-group">
                    <label>>Kategori</label>
                    <input type="text" class="form-control" name="CategoryId" value="@Model.CategoryId" />
                    @* @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })*@

                </div>
                <br />
                <button class="btn btn-primary" type="submit">Güncelle</button>
                <a href="/AdminProduct/Index" class="btn btn-primary">Ürün Listesi</a>
            </form>
        </div>
    </div>
</div>





